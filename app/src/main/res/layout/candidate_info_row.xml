<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_corner"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <TextView
         android:id="@+id/candidate_info_name"
         android:layout_width="match_parent"
         android:text="Name"
         android:textSize="18sp"
         android:layout_margin="4dp"
         android:textStyle="bold"
         android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/candidate_info_email"
        android:layout_width="match_parent"
        android:layout_below="@+id/candidate_info_name"
        android:textSize="18sp"
        android:layout_margin="4dp"
        android:text="Email"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/candidate_info_number"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_margin="4dp"
        android:text="Number"
        android:layout_below="@+id/candidate_info_email"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_below="@+id/candidate_info_number"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/candidate_result"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="Result"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/candidate_info_number"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/candidate_info_share"
        android:layout_width="wrap_content"
        android:src="@android:drawable/ic_menu_share"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/candidate_info_number"
        android:layout_height="wrap_content"/>


</RelativeLayout>